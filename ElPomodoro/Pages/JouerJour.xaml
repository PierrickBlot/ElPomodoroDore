<Page x:Class="ElPomodoro.Pages.JouerJour"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ElPomodoro.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="JouerJour"
      Height="550" Width="400" Background="#2D2D30">
    <Grid>
        <Label x:Name="Titre" HorizontalAlignment="Left" VerticalAlignment="Top" Width="400" HorizontalContentAlignment="Center" FontSize="35" FontFamily="Algerian" Foreground="#FFDF66"/>
        <Border CornerRadius="360" BorderThickness="5" Margin="31,81,31,137" Background="#2D2D30" BorderBrush="#FFDF66"/>
        <TextBlock x:Name="clocktxtblock" FontSize="60" Margin="0,215,0,251" HorizontalAlignment="Center" Width="400" TextAlignment="Center" Text="00:25:00" Foreground="#FFDF66"/>
        <Button Content="Start" HorizontalAlignment="Left" Margin="31,448,0,0" VerticalAlignment="Top" Width="75" Click="Start_button_click" Background="#FFDF66" Foreground="#2D2D30"/>
        <Button Content="Stop" HorizontalAlignment="Left" Margin="294,448,0,0" VerticalAlignment="Top" Width="75" Click="Stop_button_click" Background="#FFDF66" Foreground="#2D2D30"/>
    </Grid>
</Page>
