<Page x:Class="ElPomodoro.Pages.JouerJour"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ElPomodoro.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="JouerJour"
      Height="550" Width="400" Background="#F7E065">

    <Grid>
        <Label x:Name="Titre" HorizontalAlignment="Left" VerticalAlignment="Top" Width="400" HorizontalContentAlignment="Center" FontSize="35" FontFamily="Algerian" Foreground="#C56721"/>
        <TextBlock Text="00:25:00" x:Name="clocktxtblock" FontSize="70" Margin="0,177,0,274" HorizontalAlignment="Center" Width="400" TextAlignment="Center"/>
        <Button Content="Start" HorizontalAlignment="Left" Margin="157,297,0,0" VerticalAlignment="Top" Width="75" Click="Start_button_click"/>
        <Button Content="Stop" HorizontalAlignment="Left" Margin="157,322,0,0" VerticalAlignment="Top" Width="75" Click="Stop_button_click"/>
    </Grid>
</Page>
